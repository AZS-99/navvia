<div class="grid-8x0-gap2 p1">
    <h1 class="txt-deepskyblue">Forename</h1>
    <h1 class="txt-deepskyblue">Surname</h1>
    <h1 class="txt-deepskyblue">Email</h1>
    <h1 class="txt-deepskyblue">Phone</h1>
    <h1 class="txt-deepskyblue">Company</h1>
    <h1 class="txt-deepskyblue">Role</h1>
    <h1 class="txt-deepskyblue">Description</h1>
    <div></div>
    {{#each employees}}
        {{#with this}}
            <p class="cap xlg">{{forename}}</p>
            <p class="cap xlg">{{surname}}</p>
            <p class="xlg">{{email}}</p>
            <p class="xlg">{{phone}}</p>
            <p class="cap xlg">{{company}}</p>
            <p class="xlg">{{role}}</p>
            <p>{{description}}</p>

        <div class="flex-ctr">
            <form method="POST" action="/employees/update_form">
                <input type="hidden" value="{{id}}" name="id"/>
                <button class="btn luminous-yellow">Update</button>
            </form>

            <form method="POST" action="/employees/delete/{{id}}">
                <button class="btn luminous-red">Delete</button>
            </form>
        </div>
        {{/with}}
    {{/each}}
</div>

<script src="../public/javascripts/grid.js"></script>