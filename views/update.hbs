<div class="fill-screen flex-TTB-alignCtr">
    <a class="p2" href="/">
        <div class="plane main">
            <div class="circle"></div>
            <div class="circle"></div>
            <div class="circle"></div>
            <div class="circle"></div>
            <div class="circle"></div>
            <div class="circle"></div>
        </div>
        <h1 class=" txt-white">NAVVIA</h1>
    </a>
    <form action="/employees/update" method="POST" class="shadow">
        <fieldset class="grid-2x0-gap1 p3">
            {{#with employee}}
                <div class="flex-TTB">
                    <label class="txt-white xlg">Forename</label>
                    <div class="flex">
                        <input type="text" name="forename" class="xlg" pattern="^([A-Z]|[a-z])[a-z]{1,20}$"
                               value="{{forename}}" disabled>
                        <button type="button" class="xlg luminous-yellow">Edit</button>
                    </div>
                </div>

                <div class="flex-TTB">
                    <label class="txt-white xlg">Surname</label>
                    <div class="flex">
                        <input type="text" name="surname" class="xlg" pattern="^([A-Z]|[a-z])[a-z]{1,20}$"
                               value="{{surname}}" disabled>
                        <button type="button" class="xlg luminous-yellow">Edit</button>

                    </div>
                </div>

                <div class="flex-TTB span-all-cols">
                    <label class="txt-white xlg">Email</label>
                    <div class="flex span-all-cols">
                        <input type="email" name="email" class="xlg grow1"
                               pattern="^[a-z_\d.]{2,30}@[a-z]{2,11}\.[a-z]{2,4}$" value="{{email}}" required disabled />
                        <button type="button" class="xlg luminous-yellow">Edit</button>
                    </div>
                </div>

                <div class="flex-TTB">
                    <label class="txt-white xlg">Phone</label>
                    <div class="flex">
                        <input type="tel" name="phone" class="xlg"  pattern="^[0-9]{10}$"
                               value="{{phone}}" required disabled />
                        <button type="button" class="xlg luminous-yellow">Edit</button>
                    </div>
                </div>


                <div class="flex-TTB">
                    <label class="txt-white xlg">Company</label>
                    <div class="flex">
                        <input type="text" name="company" class="xlg" pattern="^[a-zA-Z0-9]+$"
                               title="Alphanumeric ONLY" value="{{company}}" disabled />
                        <button type="button" class="xlg luminous-yellow">Edit</button>
                    </div>
                </div>


                <div class="flex-TTB">
                    <label class="txt-white xlg">Role</label>
                    <div class="flex">
                        <select name="role" class="xlg grow1" disabled>
                            <option {{#unless role}}selected="true" disabled="true"{{/unless}}>Role</option>
                            <option {{#if (equals role "manager")}}selected="true"{{/if}} value="manager">Manager</option>
                            <option {{#if (equals role "developer")}}selected="true"{{/if}} value="developer">Developer</option>
                            <option {{#if (equals role "guard")}}selected="true"{{/if}} value="guard">Developer</option>
                            <option {{#if (equals role "hr")}}selected="true"{{/if}} value="hr">HR</option>
                            <option {{#if (equals role "janitor")}}selected="true"{{/if}} value="janitor">Janitor</option>
                        </select>
                        <button type="button" class="xlg luminous-yellow">Edit</button>
                    </div>
                </div>


                <div class="flex-TTB span-all-cols">
                    <label class="txt-white xlg">Description</label>
                    <div class="flex-alignCtr">
                        <textarea name="description" class="xlg grow1" disabled>{{description}}</textarea>
                        <button type="button" class="xlg luminous-yellow">Edit</button>
                    </div>
                </div>



                <input type="hidden" name="_csrf" value="{{csurf_token}}"/>
                <input type="hidden" name="id" value="{{id}}" />

                <div class="span-all-cols flex-spaceEvenly">
                    <button class="xlg btn-electric ice">Submit</button>
                    <button type="reset" class="xlg btn-electric fire">Reset</button>

                </div>
            {{/with}}

        </fieldset>
    </form>
</div>

<script src="../public/javascripts/update.js"></script>